<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="383dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562">

        <EditText
            android:id="@+id/edittxtnumeroIngresado"
            android:layout_width="109dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#D6A40B"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Números!" />

        <TextView
            android:id="@+id/txtindicaciones"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="105dp"
            android:text="Adivina el número del 1 al 3" />

        <EditText
            android:id="@+id/edittxtAdivina"
            android:layout_width="146dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:backgroundTint="#D6A40B"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Digite un número"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btncambiarPantallaInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:backgroundTint="#D6A40B"
            android:text="JUGAR"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtnombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="GRUPAL - PABLO ABRIGO , BRAYAN CHAMICO" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>